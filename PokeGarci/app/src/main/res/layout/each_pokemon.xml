<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_marginVertical="4dp"
    app:cardElevation="20dp"
    app:strokeWidth="3dp"
    android:id="@+id/eachPokemonMaterialCardView"
    app:strokeColor="@color/black"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="@color/white"
    android:padding="4dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imagePokemon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Pokemon Image" />

        <TextView
            android:id="@+id/textPokemonName"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Pikachu"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingTop="1dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="0039"
        android:id="@+id/eachPokemonId"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/image_border_bg"
            android:padding="1dp"
            android:id="@+id/firstTypeIcon"
            android:src="@drawable/grass_ic" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/image_border_bg"
            android:padding="1dp"
            android:id="@+id/secondTypeIcon"
            android:layout_marginTop="2dp"
            android:src="@drawable/grass_ic" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
